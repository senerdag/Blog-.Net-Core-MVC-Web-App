@model UserAddDto   

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">User /</span> Create User</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">

                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="First Name" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Last Name" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Email" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Phone Number" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Role</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        </div>
                        <div class="form-group">
                            <label for="defaultFormControlInput" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="&xb7&xb7&xb7&xb7&xb7&xb7" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Create</button>
                        <div class="form-group"></div>
                    </div>



                </form>


            </div>
        </div>

    </div>
</div>