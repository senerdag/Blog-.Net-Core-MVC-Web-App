@model List<UserDto>




<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> User management</h4>



    <div class="card">
        <h5 class="card-header">User Table</h5>
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">Create <i class="bx bx-plus"></i></a>
            <table class="table table-bordered" id="usersTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Role</th>
                        <th>Email Confirmed</th>
                        <th>Acces Failed Count</th>
                        <th>Transactions</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Role</th>
                        <th>Email Confirmed</th>
                        <th>Acces Failed Count</th>
                        <th>Transactions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <th>@user.FirstName</th>
                            <th>@user.LastName</th>
                            <th>@user.Email</th>
                            <th>@user.PhoneNumber</th>
                            <th>@user.Role</th>
                            <th>@(user.EmailConfirmed ? "Not Active" : "Active")</th>
                            <th>@user.AccesFailedCount</th>
                            <th>
                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id"><i class="bx bx-minus-circle"></i></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>


@section Scripts
{
    <script src="~/js/userindex.js" type="application/ecmascript"></script>
}
