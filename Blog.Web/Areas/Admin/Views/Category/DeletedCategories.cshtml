@model List<CategoryDto>



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Categories /</span> Category management</h4>



    <div class="card">
        <h5 class="card-header">Deleted Category Table</h5>
        <div class="table-responsive text-nowrap m-5">
            <table class="table table-bordered" id="categoriesTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Is Deleted</th>
                        <th>Transactions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Is Deleted</th>
                        <th>Transactions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <th>@category.Name</th>
                            <th>@category.CreatedDate.ToShortDateString()</th>
                            <th>@category.CreatedBy</th>
                            <th>@(category.IsDeleted ? "Not Active" : "Active")</th>
                            <th>
                                <a class="btn btn-warning btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="UndoDelete" asp-route-categoryId="@category.Id"><i class="bx bx-undo"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id"><i class="bx bx-minus-circle"></i></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>


@section Scripts
{
    <script src="~/js/categoryindex.js" type="application/ecmascript"></script>
}
