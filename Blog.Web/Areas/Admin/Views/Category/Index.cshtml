@{
}


@model List<CategoryDto>



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Categorys /</span> Category management</h4>



    <div class="card">
        <h5 class="card-header">Category Table</h5>
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">Create <i class="bx bx-plus"></i></a>
            <table class="table table-bordered" id="categoriesTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Situation</th>
                        <th>Transactions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Situation</th>
                        <th>Transactions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var Category in Model)
                    {
                        <tr name="@Category.Id">
                            <th>@Category.Name</th>
                            <th>@Category.CreatedDate.ToShortDateString()</th>
                            <th>@Category.CreatedBy</th>
                            <th>@(Category.IsDeleted ? "Not Active" : "Active")</th>
                            <th>
                                <a class="btn btn-primary btn-sm" data-id="@Category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@Category.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@Category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@Category.Id"><i class="bx bx-minus-circle"></i></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>


@section Scripts
                            {
    <script src="~/js/categoryindex.js" type="application/ecmascript"></script>
}
